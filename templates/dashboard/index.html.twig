{% extends "base.html.twig" %}

{% block pageTitle %}{% trans %}Dashboard{% endtrans %}{% endblock %}

{% block body %}
    <section class="content">
        <div class="row">
            <div class="col-12">
                {% if currentCompany() %}
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Kennzahlen {{ currentCompany().name }}</h3>
                    </div>
                    <div class="card-body">
                        <p>Umsatz (netto) der letzten 12 Monate: {{ salesLastYear | number_format }} €</p>
                        <p>Ausstehende Aufträge: {{ projectsActive }}</p>
                        <p>Auftragsvolumen in EUR: {{ projectVolume | number_format }} €</p>
                        <p>Auftragsreichweite: {{ projectRange }} Tage</p>
                    </div>
                </div>
                {% endif %}
            </div>
        </div>
    </section>
{% endblock %}
