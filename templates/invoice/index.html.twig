{% extends "base.html.twig" %}

{% block pageTitle %}Manage Invoices{% endblock %}

{% block body %}
<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Manage Invoices</h3>
                </div>
                <div class="card-body">
                    <div class="container-fluid mb-3">
                        <div class="text-right">
                            <a href="{{ path('app_invoice_add') }}" class="btn btn-primary">New Invoice</a>
                        </div>
                    </div>

                    <table class="table table-sm table-bordered table-striped table-hover invoice--index--table-invoices">
                        <thead>
                        <tr>
                            <th>No.</th>
                            <th>Date</th>
                            <th>Company</th>
                            <th>Customer</th>
                            <th>Subject</th>
                            <th>Total Price</th>
                            <th>Paid</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        </tbody>
                        <tfoot>
                        <tr>
                            <th>No.</th>
                            <th>Date</th>
                            <th>Company</th>
                            <th>Customer</th>
                            <th>Subject</th>
                            <th>Total Price</th>
                            <th>Paid</th>
                            <th>Actions</th>
                        </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
