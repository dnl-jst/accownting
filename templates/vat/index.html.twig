{% extends "base.html.twig" %}

{% block pageTitle %}{% trans %}Dashboard{% endtrans %}{% endblock %}

{% block body %}
    <section class="content">
        <div class="row">
            <div class="col-12">
                {% if currentCompany() %}
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Umsatz / Monat f√ºr {{ currentCompany().name }}</h3>
                    </div>
                    <div class="card-body">
                        <table class="table table-sm table-bordered table-striped table-hover">
                            <thead>
                            <tr>
                                <th>Monat</th>
                                <th>Netto-Umsatz</th>
                                <th>Brutto-Umsatz</th>
                                {% for vatRate in vatRates %}
                                <th>USt. {{ vatRate.name }}</th>
                                {% endfor %}
                            </tr>
                            </thead>
                            <tbody>
                                {% for month, sales in rows %}
                                <tr>
                                    <td>{{ month }}</td>
                                    <td>{{ sales.net | number_format }} EUR</td>
                                    <td>{{ sales.gross | number_format }} EUR</td>
                                    {% for vatRate in vatRates %}
                                    <td>{{ sales[vatRate.id] | number_format }} EUR</td>
                                    {% endfor %}
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                {% endif %}
            </div>
        </div>
    </section>
{% endblock %}
