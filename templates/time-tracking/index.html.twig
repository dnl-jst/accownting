{% extends "base.html.twig" %}

{% block pageTitle %}{% trans %}Time Tracking{% endtrans %}{% endblock %}

{% block body %}
<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">{% trans %}Time Tracking{% endtrans %}</h3>
                </div>
                <div class="card-body">
                    <div class="row mb-2">
                        <div class="col-6">
                            <div class="filter-form">
                                {{ form_start(filterForm) }}
                                    {{ form_widget(filterForm.date) }}
                                {{ form_end(filterForm) }}
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="text-right">
                                <a href="{{ path('app_timetracking_add') }}?moment={{ filterForm.vars.value.date|date('Y-m-d') }}" class="btn btn-primary">{% trans %}Add Time Track Item{% endtrans %}</a>
                            </div>
                        </div>
                    </div>

                    <table class="table table-sm table-bordered table-striped table-hover">
                        <thead>
                        <tr>
                            <th>{% trans %}ID{% endtrans %}</th>
                            <th>{% trans %}Project{% endtrans %}</th>
                            <th>{% trans %}Moment{% endtrans %}</th>
                            <th>{% trans %}Description{% endtrans %}</th>
                            <th>{% trans %}Duration{% endtrans %}</th>
                            <th>{% trans %}Chargeable{% endtrans %}</th>
                            <th>{% trans %}Actions{% endtrans %}</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for item in timeTrackItems %}
                        <tr>
                            <td>{{ item.id }}</td>
                            <td>
                                {{ item.project.name }}<br>
                                <small>{{ item.project.customer.name }}</small>
                            </td>
                            <td>{{ item.moment|date('d.m.Y H:i') }}</td>
                            <td>{{ item.description }}</td>
                            <td class="text-right">{{ item.duration|number_format }}</td>
                            <td>{{ (item.chargeable) ? 'yes'|trans : 'no'|trans }}</td>
                            <td>
                                <div class="btn-group">
                                    <a href="{{ path('app_timetracking_edit', {id: item.id}) }}" class="btn btn-primary btn-sm"><i class="fa fa-edit"></i></a>
                                    <a href="{{ path('app_timetracking_delete', {id: item.id}) }}" class="btn btn-danger btn-sm btn-delete">
                                        <i class="fa fa-remove"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                        </tbody>
                        <tfoot>
                        <tr>
                            <th>{% trans %}ID{% endtrans %}</th>
                            <th>{% trans %}Project{% endtrans %}</th>
                            <th>{% trans %}Moment{% endtrans %}</th>
                            <th>{% trans %}Description{% endtrans %}</th>
                            <th>{% trans %}Duration{% endtrans %}</th>
                            <th>{% trans %}Chargeable{% endtrans %}</th>
                            <th>{% trans %}Actions{% endtrans %}</th>
                        </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
