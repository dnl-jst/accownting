<div id="content">
    <table class="container">
        <tr>
            <td>
                <table>
                    <tr>
                        <td>
                            <h2>
                                Rechnung {{ invoice.invoiceNumber }}
                            </h2>
                        </td>
                        <td class="number">
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td>&nbsp;</td>
        </tr>
    </table>
    <table>
        <thead>
        <tr class="odd">
            <th>Pos.</th>
            <th>Beschreibung</th>
            <th class="number">Menge</th>
            <th class="number">Einzelpreis</th>
            <th class="number">Gesamtpreis</th>
        </tr>
        </thead>
        <tbody>
        {% for lineItem in invoice.lineItems %}
            <tr>
                <td>{{ loop.index }}.</td>
                <td>
                    <b>{{ lineItem.title }}</b>
                    {% if lineItem.description %}
                    <p>{{ lineItem.description }}</p>
                    {% endif %}
                </td>
                <td class="number">
                    {{ lineItem.amount | number_format }} {{ lineItem.unit.name }}
                </td>
                <td class="number">
                    {{ lineItem.priceSingle | number_format }} EUR
                </td>
                <td class="number">
                    {{ lineItem.priceTotal | number_format }} EUR
                </td>
            </tr>
        {% endfor %}
        <tr>
            <td colspan="5">&nbsp;</td>
        </tr>
        <tr class="odd">
            <td colspan="4" class="number">Gesamtsumme netto:</td>
            <td class="number">{{ invoice.totalNetPrice | number_format }} EUR</td>
        </tr>
        {% for rate, taxes in invoice.taxesByRate %}
        <tr>
            <td colspan="4" class="number">zzgl. Umsatzsteuer {{ rate }}%:</td>
            <td class="number">{{ taxes | number_format }} EUR</td>
        </tr>
        {% endfor %}
        <tr class="odd">
            <th colspan="4" class="number">Gesamtsumme brutto:</th>
            <th class="number">{{ invoice.totalGrossPrice | number_format }} EUR</th>
        </tr>
        </tbody>
    </table>
    <br>
    <table>
        <tr>
            <td></td>
        </tr>
        <tr>
            <td>
                {% if invoice.creditPeriod is not null %}
                Zahlungsbedingungen: Zahlbar innerhalb von {{ invoice.creditPeriod }} Tagen ab Rechnungseingang ohne Abzüge.
                {% else %}
                Zahlungsbedingungen: Zahlbar sofort nach Rechnungseingang ohne Abzüge.
                {% endif %}
            </td>
        </tr>
    </table>
</div>
